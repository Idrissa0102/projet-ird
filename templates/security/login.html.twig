{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block style %}
    <style>
        img {
            border-top-left-radius: 30px;
            border-bottom-left-radius: 30px;
            border-top-right-radius: 30px;
            border-bottom-right-radius: 30px;
        }

        .btn1 {
            border: none;
            outline: none;
            height: 50px;
            width: 100%;
            background-color: rgb(89, 105, 243);
            color: white;
            border-radius: 4px;
            font-weight: bold;
        }

        .btn1:hover {
            background: white;
            border: 1px solid;
            color: black;
        }
    </style>
{% endblock %}

{% block body %}
<form method="post">


    <section class="Form my-4 mx-5">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-lg-5">
                    <img src="{{asset('img/irdAuth.png')}}" style="width: 100%; height: 100%;" class="img-fluid" alt="">
                </div>

                <div class="col-lg-7 px-5 pt-5">
                    <h1 class="font-weight-bold py-3">Institut de Recherche pour le Développement</h1>
                    <h4>Se connecter à votre compte</h4>

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                    <form>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <label for="inputEmail"></label>
                                <input type="email" value="{{ last_username }}" placeholder="Adresse mail" name="email" id="inputEmail" class="form-control my-3 p-4 " autocomplete="email" required autofocus >
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                                <label for="inputPassword"></label>
                                <input type="password" placeholder="*************" class="form-control my-3 p-4" name="password" id="inputPassword" autocomplete="current-password" required>
                            </div>
                        </div>


                        {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                        #}
                        <div class="form-row">
                            <div class="col-lg-7">
                                <button type="submit" class="btn1 mt-3 mb-5">S'authentifier</button>
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}">
                        <a href="#">Mot de passe oublié ?</a>
                        <p>Vous n'avez pas de compte <a href="form-inscription.html">S'inscrire ici</a></p>
                    </form>

                    

                </div>

            </div>

        </div>

    </section>



{% endblock %}
