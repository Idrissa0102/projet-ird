    {% extends 'base.html.twig' %}

    {% block title %}Log in!{% endblock %}

    {% block body %}
    <form method="post">

    <section class="Form my-4 mx-5">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-lg-5">
                    <img src="{{asset('img/irdAuth.png')}}" style="width: 100%; height: 100%;" class="img-fluid" alt="">
                </div>

                <div class="col-lg-7 px-5 pt-5">
                    <h1 class="font-weight-bold py-3">Institut de Recherche pour le Développement</h1>
                    <h2>Connectez-vous à votre compte</h2>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        

        <div class="form-row">
        <div class="col-lg-7">
            <label for="inputEmail"></label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-3 p-4 " placeholder="Adresse mail" autocomplete="email" required autofocus>
        </div>
        </div>
        <div class="form-row">
        <div class="col-lg-7">
        <label for="inputPassword"> </label>
        <input type="password" name="password" id="inputPassword" class="form-control my-3 p-4" placeholder="*************" autocomplete="current-password" required>
        </div>
        </div>
        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
        <div class="form-row">
        <button class="btn btn-lg btn-primary" type="submit">
            S'authentifier
        </button>
        
        <div>
        <a href= {{ path('app_forgot_password_request') }}>Mot de passe oublié ?</a>
        <p>Vous n'avez pas de compte ?<a href={{ path('app_register') }}>Inscrivez-vous ici !</a></p>
        
    </form>
    </div>

            </div>

        </div>

    </section>
    {% endblock %}
