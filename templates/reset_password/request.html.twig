{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}


{% block style %}
<style>
        .btn1 {
            border: none;
            outline: none;
            height: 50px;
            width: 100%;
            background-color: rgb(89, 105, 243);
            color: white;
            border-radius: 4px;
            font-weight: bold;
        }

        .btn1:hover {
            background: white;
            border: 1px solid;
            color: black;
        }

        #id1 {
            border-top-left-radius: 5%;
            border-bottom-left-radius: 5%;
        }

        #id2 {
            width: 85%;
            background: rgb(231, 235, 235);
            border-radius: 6px;
            padding: 20px 60px 30px 40px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
            margin-left: auto;
            margin-right: auto;
        }
    </style>
{% endblock %}
{% block body %}


<!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div  class="container">

            <ol>
                <li><a href="index.html">Accueil</a></li>

            </ol>
            <h2>Mot de passe oublié</h2>

        </div>
    </section><!-- End Breadcrumbs -->

    <!-- Formulaire de connexion -->
    <section class="Form my-4 mx-5">
        <div id="id2" class="container">
            <div class="row no-gutters">
                <div class="col-lg-5">
                    <img id="id1" src="{{asset('/img/ird-pictures/ird1.jpg')}}" style="width: 100%; height: 100%;"
                        class="img-fluid" alt="">
                </div>
                <div class="col-lg-7 px-5 pt-5">
                    <h1 class="font-weight-bold py-3">Mot de passe oublié</h1>
                    <h4>Entrer votre adresse mail en dessous, nous vous enverrons un lien pour reinitialiser votre mot
                        de passe</h4>




    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    

    {{ form_start(requestForm) }}
        
        {{ form_row(requestForm.email) }}
        
        <div class="form-row">
            <div class="col-lg-7">

        <button class=" mt-3 mb-5 btn btn-primary">Reinitialiser mon mot de passe</button>
        </div>
    </div>
    {{ form_end(requestForm) }}


</div>

            </div>

        </div>

    </section>


{% endblock %}